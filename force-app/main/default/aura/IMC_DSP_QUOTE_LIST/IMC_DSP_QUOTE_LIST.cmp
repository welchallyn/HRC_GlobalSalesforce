<aura:component description="IMC_DSP_QUOTE_LIST"
                implements="lightning:isUrlAddressable,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                access="global"
                >
    <aura:attribute name="srcURL" type="String" />
    <aura:attribute name="srcURLFull" type="String" />
    <aura:attribute name="pageReference" type="object" />
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    
    <lightning:navigation aura:id="navService" />
    <lightning:workspaceAPI aura:id="workspace" />
    <aura:attribute name="popUpMode" type="boolean" default="false" />
    
    
    <!-- Defining the structure for the embedded page -->
    <div class="slds-clearfix">
        <div class="slds-float_right">
            <div class="slds-button-group slds-float_right" role="group">
                <lightning:buttonIcon
                                      iconName="utility:expand"
                                      class=" BtnCss slds-p-right_small"
                                      variant="bare"
                                      alternativeText="expand"
                                      title="popUp"
                                      onclick="{!c.openPopUp}"
                                      />
                
                <lightning:buttonIcon
                                      iconName="utility:new_window"
                                      class=" BtnCss slds-p-right_small"
                                      variant="bare"
                                      alternativeText="expand"
                                      title="openInNewWindow"
                                      onclick="{!c.openNewWindow}"
                                      />
                
            </div>
        </div>
        <div id="iframe1" class="slds-scrollable_y" style="height:700px;width:100%">
            <iframe width="100%" height="700px" src="{!v.srcURL}" frameborder="0" />
        </div>
    </div>
    
    <!-- Screen Maximize : Start -->
    
    <aura:if isTrue="{!v.popUpMode}">
        <div role="dialog" class="slds-modal slds-fade-in-open slds-modal_large">
            <div class="slds-modal__container">
                
                <!--Modal Box Header-->
                <!-- Code updated for ticket:#1818 -->
                <header class="slds-modal__header">
                    <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closePopUp}">
                        <p style="font-size: x-large;">X</p> 
                        <span class="slds-assistive-text">Close</span>
                    </button>
                </header>
                <!-- Code updated for ticket:#1818 -->
                <!--Modal Box Header-->
                
                <div class="slds-modal__content slds-p-around--medium">
                    <center>
                        <div
                             id="iframe1"
                             class="slds-scrollable_y"
                             style="height:700px;width:100%"
                             >
                            <iframe
                                    width="100%"
                                    height="700px"
                                    src="{!v.srcURL}"
                                    frameborder="0"
                                    />
                        </div>
                    </center>
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
    </aura:if>
</aura:component>