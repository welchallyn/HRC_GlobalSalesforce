<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HRCSVC20_Test_Performed_Reqd_on_Closure</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT($Setup.HRCFSL_Org_Exception_Rule__c.HRCFSL_Validation_Rule__c),
ISPICKVAL(Status, &apos;Completed&apos;),
ISBLANK( HRCFSL_Work_Order__r.xx_HRCFSL_Repair_Template_Question_4C__c ))</errorConditionFormula>
    <errorMessage>You cannot close a workorder if the Test performed per service manual field on the repair template has not been filled in.</errorMessage>
</ValidationRule>
