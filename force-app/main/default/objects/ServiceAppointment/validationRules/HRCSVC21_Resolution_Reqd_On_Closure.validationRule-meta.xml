<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HRCSVC21_Resolution_Reqd_On_Closure</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT($Setup.HRCFSL_Org_Exception_Rule__c.HRCFSL_Validation_Rule__c),
ISPICKVAL(Status, &apos;Completed&apos;),
HRCFSL_Work_Order__r.HRCSVC21_Has_CQ__c =true,
ISBLANK(  HRCFSL_Work_Order__r.HRCSVC20_Repair_Template_Question_5a__c ) )</errorConditionFormula>
    <errorMessage>You cannot close a workorder if the Resolution field on the repair template has not been filled in.</errorMessage>
</ValidationRule>
