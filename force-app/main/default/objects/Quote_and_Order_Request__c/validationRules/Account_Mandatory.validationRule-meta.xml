<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(Opportunity__c), ISBLANK( Account__c ))</errorConditionFormula>
    <errorDisplayField>Account__c</errorDisplayField>
    <errorMessage>Please select either an Account or an Opportunity to proceed.</errorMessage>
</ValidationRule>
